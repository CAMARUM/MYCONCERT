@{
    Layout = null;
}


<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <title>Registrar Usuario</title>
</head>
<body>
    <form class="form-horizontal text-center" role="form">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-5">
                <center>
                    <h1><p class="text-danger">REGISTRO</p></h1>
                </center>
            </div>
            <br>
        </div>
        <div class="well" style="margin-left:10%; margin-right:10%">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-5">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user" style="color:#46C6E6"></span></span>
                            <input type="text" class="form-control" placeholder="Nombre de Usuario" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-5">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock" style="color:#46C6E6"></span></span>
                            <input type="text" class="form-control" placeholder="Codigo official de Ingeniero" required>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-5">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock" style="color:#46C6E6"></span></span>
                            <input type="password" class="form-control" placeholder="Contraseña" style="width:100%" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-5">
                        <button type="button" class="btn btn-info btn-lg btn-block">Registrar</button>
                    </div>
                </div>
            </div>
        </div>
        
    </form>
 
    


        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
